@import 'animations/fadeUp';

#panel-dismiss
  position absolute
  bottom 3.5em
  right 0
  left 0
  width 40px
  margin 0 auto
  color white
  text-align center
  cursor pointer
  z-index 3
  animation attention 2s ease-in-out 10
  font-size 3.6em
  text-decoration none

full-page-panel
  width 100%
  height 100%
  display block
  overflow-y hidden
  background-color $white
  opacity 1

  &.dismissed
    animation up-out 600ms ease-out forwards

  main
    display flex
    box-sizing border-box
    width 100%
    height 100% !important
    padding 2em 3em
    z-index 2
    text-align center
    justify-content center
    flex-direction column
    background radial-gradient(rgba($secondary, 0.2), rgba($main, 0.9)),
               url('/assets/images/bg.png') no-repeat center top,
               linear-gradient(#fff, #fff)
    background-size cover

    color $white
    transform-origin 50% 0


    h1
      line-height 1.1
      font-size 3em
      font-weight bold
      animation-delay 600ms

    h2
      font-weight normal
      animation-delay 700ms

    h1, h2
      @extends .fade-in-up
      text-transform uppercase
      animation-fill-mode both
      animation-duration 300ms

.main-nav
  position absolute
  top 4em
  right 0
  left 0
  width 100%


@media only screen and (min-width 768px)
  full-page-panel main h1
    font-size 5em
