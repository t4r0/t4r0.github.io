html, body, .main-container, main
  font-family: 'roboto_condensed', Helvetica, sans-serif;
  width 100%
  height 100%
  color $text-color

p
  font-family 'open_sans', Arial, sans-serif;

nav
  ul
    padding-left 0
    display flex
    justify-content space-between
    max-width 45em
    margin 0 auto
    margin-bottom 1em
    width 80%

    li
      display inline
      list-style none
      font-size 1.2em

      a, a:visited, a:focus, a:hover
        color white
        text-decoration none
        text-transform capitalize
        position relative

      a:before
        content ''
        position absolute
        bottom -5px
        width 100%
        display block
        transform scaleX(0)
        transform-origin 50% 0
        border-bottom solid white 5px
        transition transform 0.2s ease-in-out

      a:hover:before
        transform none

      a:hover
        font-weight bold

section
  padding 4em 1.5em
  width 100%
  max-width 62.5em
  margin 0 auto

.animate-hidden
  visibility hidden
