html, body, .main-container, main
  font-family: 'roboto_condensed', Helvetica, sans-serif;
  width 100%
  height 100%

nav
  ul
    padding-left 0
    display flex
    justify-content space-between
    max-width 45em
    margin 0 auto
    margin-bottom 1em
    width 80%

    li
      display inline
      list-style none
      font-size 1.2em

      a, a:visited, a:focus, a:hover
        color white
        text-decoration none
        text-transform capitalize
