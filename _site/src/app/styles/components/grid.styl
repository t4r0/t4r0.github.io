grid-container()
  width 50%
  height 20vw
  box-sizing border-box
  display table
  text-align justify
  padding 5px
  overflow hidden
  float left

  .cover-img
    width 100%
    height 100%
    max-width 100%
    object-fit cover
    border 0

  @media only screen and (min-width 800px)
    text-align left


.grid
  width 100%
  margin 1.1em auto
  max-width 92em

  .icon
    font-size 2.5em

    h1
      margin-bottom 0
      margin-top 0

    .wrapper
      text-align center

  .medium, .main, .long, .important, .small
    grid-container()

  .small
    width 50vw
    height 50vw

    @media only screen and (min-width 800px)
      width 25%
      height 20vw

  .clear
    clear both

  .right
    float right !important

  .medium
    height 40vw
    @media only screen and (min-width 800px)
      width 25%
      height 20vw

  .main
    width 100%
    height 20vw

    @media only screen and (min-width 800px)
      width 50%
      height 40vw

  .long
    width 100%
    @media only screen and (max-width 600px)
      height 50%

    @media only screen and (min-width 800px)
      width 75%

  .half
    width 100%

    @media only screen and (min-width 800px)
      width 50%

  .important
    width 100%

    & + *
      width 100% !important

    @media only screen and (min-width 800px)
      width 67%

      & + *
        width 33% !important

    @media only screen and (max-width 960px)
      height 40vw

      & + *
        height 40vw

  .transparent
    color $white
    box-shadow none

    h1
      color $white

    p
      opacity 0.8

  .purple .wrapper
    background $accent

  .white .wrapper
    background $white

    a
      color $main

  .green .wrapper
    background $secondary

    a
      color $accent


  .blue .wrapper
    background $blue

    a
     color $white


  .pink .wrapper
    background $pink

    a
     color $white

  .dark-blue .wrapper
    background #0D47A1

    a
      color $white

  a
    color $secondary
    cursor pointer
    opacity 1 !important

  small
    font-size 20px
    font-family 'roboto', sans-serif

.wrapper
  display table-cell
  vertical-align middle

  img
    max-width calc(100% - 1em)
    margin 0.5em

  @media only screen and (min-width 800px)
    padding 0 20px


.text-wrapper
  display block
  padding 0 10px
  p
    line-height 1.3
  @media only screen and (min-width 800px)
    padding 0 60px


.project
  .project-wrapper
    position relative
    display table
    width 100%
    height 100%
    font-weight normal

  .project-info
    position absolute
    bottom 0px
    display table-cell
    vertical-align baseline;
    color white
    padding 0.6em

    h3, p
      text-transform uppercase
      word-wrap: break-word;

    h3
      font-size 22px
      margin-bottom 0
      line-height 10px

    p
      font-size 16px
