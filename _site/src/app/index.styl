html, body, .main-container, main
  font-family: 'roboto', Helvetica, sans-serif;
  width 100%
  height 100%
  color $text-color
  letter-spacing 1px


body
  background-color $bg-alt

nav
  ul
    padding-left 0
    display flex
    justify-content space-between
    max-width 45em
    margin 0 auto
    margin-bottom 1em
    width 83.5%

    li
      display inline
      list-style none
      font-size 1.2em

      a, a:visited, a:focus, a:hover
        color white
        text-decoration none
        text-transform capitalize
        position relative
        font-weight normal

      a:before
        content ''
        position absolute
        bottom -5px
        width 100%
        display block
        transform scaleX(0)
        transform-origin 50% 0
        border-bottom solid white 5px
        transition transform 0.2s ease-in-out

      a:hover:before
        transform none

      a:hover
        font-weight bold


.animate-hidden
  visibility hidden !important

a
  color $main
  text-decoration none
  font-weight bold
